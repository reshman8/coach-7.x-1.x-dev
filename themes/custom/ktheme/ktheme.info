name = Ktheme
description = Theme with fixed size, multiple columns and regions, based on Kanji.
version = "1.x-dev"
core = "7.x"
project = "kanji"
base theme = kanji
engine = phptemplate
stylesheets[all][] = style.css
stylesheets[all][] = local.css
stylesheets[print][] = print.css
scripts[] = main.js

regions[header_top] = header top
regions[highlighted] = Highlighted
regions[search_box] = Search box
regions[main_menu] = Main menu
regions[sidebar_first] = sidebar first
regions[sidebar_second] = sidebar second

regions[header] = header
regions[preface_top] = preface top
regions[content_top] = content top
regions[content] = content
regions[content_bottom] = content bottom
regions[postscript_bottom] = postscript bottom
regions[footer_message] = Footer message
regions[footer_bottom] = footer bottom

settings[default_background] = 1
;settings[default_picture] = 0

dependencies[] = block

;features[] = logo
;features[] = name
;features[] = slogan
;features[] = node_user_picture
;features[] = comment_user_picture
;features[] = comment_user_verification
;features[] = favicon
;features[] = main_menu
;features[] = secondary_menu

;plugins[panels][styles] = styles